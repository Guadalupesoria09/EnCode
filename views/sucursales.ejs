<!DOCTYPE html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sucursales</title>
    <link href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css" rel="stylesheet">
    <style>
        .sucursal-card {
            border: 2px solid #041E3F;
            border-radius: 10px;
            padding: 1.5rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
        }

        .sucursal-info {
            display: flex;
            align-items: center;
        }

        .sucursal-icon {
            margin-right: 1rem;
        }

        .agregar-btn {
            background-color: #63D2B2;
            color: white;
            width: 100%;
            text-align: center;
            padding: 1rem;
            border: none;
            border-radius: 5px;
            margin-top: 2rem;
        }

        .agregar-btn:hover {
            background-color: #57b89c;
        }
    </style>
</head>
<body>

<main>

<section class="section">
    <div class="container">
        <h1 class="title has-text-centered">SUCURSALES</h1>
        
        <div class="columns is-multiline">
            <!-- Sucursal 1 -->
            <div class="column is-half">
                <div class="sucursal-card">
                    <div class="sucursal-info">
                        <img src="icono_sucursal.png" alt="Icono Sucursal" class="sucursal-icon">
                        <div>
                            <p class="title is-5">Sucursal XXXX</p>
                            <p class="subtitle is-6">Dirección<br>Número</p>
                        </div>
                    </div>
                    <div>
                        <span class="icon is-medium">
                            <i class="fas fa-cog"></i>
                        </span>
                    </div>
                </div>
            </div>

            <!-- Repite el código para cada sucursal -->

            <div class="column is-half">
                <div class="sucursal-card">
                    <div class="sucursal-info">
                        <img src="icono_sucursal.png" alt="Icono Sucursal" class="sucursal-icon">
                        <div>
                            <p class="title is-5">Sucursal XXXX</p>
                            <p class="subtitle is-6">Dirección<br>Número</p>
                        </div>
                    </div>
                    <div>
                        <span class="icon is-medium">
                            <i class="fas fa-cog"></i>
                        </span>
                    </div>
                </div>
            </div>

            <!-- Añade más sucursales según sea necesario -->
        </div>

        <button class="agregar-btn">AGREGAR MÁS</button>
    </div>
</section>

<script src="https://kit.fontawesome.com/a076d05399.js"></script>
</body>
</html>

