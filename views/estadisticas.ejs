<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Estadísticas</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.9.4/css/bulma.min.css">
    <style>
        .chart-container {
            width: 80%;
            margin: 0 auto;
            padding: 20px; 
            background-color: #f5f5f5; 
            border-radius: 8px; 
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); 
        }
        .title {
            color: #3273dc; 
        }
        .subtitle {
            color: #363636; 
        }
        .box {
            border: 1px solid #dbdbdb; 
            border-radius: 4px;
        }
        .box p {
            color: #4a4a4a; 
        }
    </style>
</head>
<body>
    <div class="container">
        <%- include('includes/head.ejs') %>
        <h1 class="title">Estadísticas</h1>

        <div class="box">
            <h2 class="subtitle">Ventas Totales</h2>
            <p>Total de ventas: <%= ventasTotales %> MXN</p>
        </div>

        <div class="box chart-container">
            <h2 class="subtitle">Productos Populares</h2>
            <canvas id="productosPopularesChart"></canvas>
        </div>

        <div class="box chart-container">
            <h2 class="subtitle">Ingresos por Mes</h2>
            <canvas id="ingresosPorMesChart"></canvas>
        </div>
    </div>

    <script>
        const productosPopularesData = JSON.parse('<%= productosPopulares %>');
        const ingresosPorMesData = JSON.parse('<%= ingresosPorMes %>');

        console.log('Productos Populares Data:', productosPopularesData);
        console.log('Ingresos Por Mes Data:', ingresosPorMesData);
    </script>
    
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Crear gráfico de barras para productos populares
        const ctxProductos = document.getElementById('productosPopularesChart').getContext('2d');
        new Chart(ctxProductos, {
            type: 'bar',
            data: {
                labels: productosPopularesData.map(item => item.nombre),
                datasets: [{
                    label: 'Cantidad Vendida',
                    data: productosPopularesData.map(item => item.cantidad),
                    backgroundColor: 'rgba(75, 192, 192, 0.2)', // Color de fondo de las barras
                    borderColor: 'rgba(75, 192, 192, 1)', // Color del borde de las barras
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Crear gráfico de líneas para ingresos por mes
        const ctxIngresos = document.getElementById('ingresosPorMesChart').getContext('2d');
        new Chart(ctxIngresos, {
            type: 'line',
            data: {
                labels: ingresosPorMesData.map(item => item.mes),
                datasets: [{
                    label: 'Ingresos',
                    data: ingresosPorMesData.map(item => item.ingresos),
                    fill: false,
                    borderColor: 'rgba(75, 192, 192, 1)', // Color de la línea
                    tension: 0.1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
    <%- include('includes/foot.ejs') %>
</body>
</html>



