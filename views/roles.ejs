<%- include('includes/head.ejs') %>
<h1 class="title has-text-centered">ROLES</h1>
<% if (mensaje && mensaje.trim() !== '') { %>
    <div class="notification is-link">
        <button class="delete"></button>
        <%= mensaje %>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            (document.querySelectorAll('.notification .delete') || []).forEach(($delete) => {
                const $notification = $delete.parentNode;

                $delete.addEventListener('click', () => {
                    $notification.parentNode.removeChild($notification);
                });
            });
        });
    </script>
<% } %>

<div class="control has-text-centered">
    <a href="<%= process.env.PATH_ENV %>config/crearRol" class="button agregar-btn is-link">AGREGAR MÁS</a>
</div>
<br>
<div class="columns is-multiline">
    <% for (rol of roles) { %>
        <div class="column is-half">
            <div class="card">
                <header class="card-header">
                    <p class="card-header-title"><%= rol.TipoRol %></p>
                    <button class="card-header-icon" aria-label="more options">
                        <span class="icon">
                            <i class="fas fa-angle-down" aria-hidden="true"></i>
                        </span>
                    </button>
                </header>
                <div class="card-content">
                    <div class="content">
                        <strong>Privilegios:</strong>
                        <% if (rol.Actividad.length == 0) { %> 'Sin permisos' <% } %>
                        <% for (let actividades of rol.Actividad) { %>
                            <ul>
                               <li><%= actividades.Actividad %></li>
                            </ul>
                        <% } %> 
                    </div>
                </div>
                <footer class="card-footer">
                    <a href="<%= process.env.PATH_ENV %>config/editarRol/<%= rol.IDRol %>" class="card-footer-item">Editar</a>
                    <a href="<%= process.env.PATH_ENV %>config/eliminarRol/<%= rol.IDRol %>" class="card-footer-item" onclick="return confirm('¿Estás seguro de que deseas eliminar esta sucursal?');">Eliminar</a>
                </footer>
            </div>
        </div>
        <% } %>
   </div>
<%- include('includes/foot.ejs') %>
