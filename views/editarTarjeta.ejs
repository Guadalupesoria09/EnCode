<%- include('includes/head.ejs') %>

<section class="section">
  <div class="container">
    <h1 class="title">Configuración Loyalty Card</h1>
    <div class="columns">

      <div class="column is-half">
        <form>
          <div class="field-container">
            <div class="box">
              <div class="field">
                <label class="label">Sellos</label>
                <div class="control">
                  <input class="input" type="range" min="1" max="10" value="5" style="height: 20px;">
                </div>
              </div>

              <div class="field">
                <label class="label">Promoción</label>
                <div class="control">
                  <div class="select">
                    <select>
                      <option value="promo1">Promoción 1</option>
                      <option value="promo2">Promoción 2</option>
                      <option value="promo3">Promoción 3</option>
                    </select>
                  </div>
                </div>
              </div>

              <div class="field">
                <label class="label">Vigencia</label>
                <div class="control">
                  <input class="input" type="date">
                </div>
              </div>
            </div>
          </div>
        </form>
        <br></br>
        <div>
            <a href="http://localhost:3000/dueno/promociones" class="button is-large is-fullwidth" style="background-color: aquamarine;">Editar Promociones</a>
        </div>
      </div>
      <div class="column is-half">
        <figure class="image">
          <img src="/Tarjeta-Lealtad.png" alt="Loyalty Card">
        </figure>
      </div>
    </div>
  </div>
</section>

<%- include('includes/foot.ejs') %>
