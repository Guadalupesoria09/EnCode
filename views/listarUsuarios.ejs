<%- include('includes/head.ejs') %>
<body>
    <h1> <%=sucursal.NombreSucursal %> </h1>

    <strong>Número:</strong> <%= sucursal.NumSucursal %><br>
    <strong>Ciudad:</strong> <%= sucursal.Ciudad %><br>
    <strong>Estado:</strong> <%= sucursal.Estado %><br>
    <strong>Dirección:</strong> <%= sucursal.Direccion %><br>
    <strong>CP:</strong> <%= sucursal.CP %><br>

    <ul>
        <div class="columns is-multiline">
        <% for (usuario of usuarios) { %>
            <div class="column is-narrow">
                <div class="box" >
                    <li>
                        <strong>Nombre:</strong> <%= usuario.NombreUsuario %><br>
                        <strong>Rol:</strong> <%= usuario.TipoRol %><br><br>

                        <a href="/editarUsuario/<%=usuario.IDUsuario %>" class="button is-link">Editar</a><br><br>
                        <a href="/eliminarUsuario/<%= usuario.IDUsuario %>" class="button is-danger" onclick="return confirm('¿Estás seguro de que deseas eliminar este usuario?')">Eliminar</a>
                    </li>
                <br>
                </div>
            </div>
        <% }; %>
        </div>
        
    </ul>
    <br><br>
    <a href="/sucur/sucursales" class="button is-warning">Regresar a Sucursales</a>
    <a href="/registrar" class="button is-link">Crear usuario</a>

</body>
<%- include('includes/foot.ejs') %>
